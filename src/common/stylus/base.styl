  url('//at.alicdn.com/t/font_849740_2usdvwswm3y.woff') format('woff'),
  url('//at.alicdn.com/t/font_849740_2usdvwswm3y.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_849740_2usdvwswm3y.svg#iconfont') format('svg');
