@import '../../common/stylus/variable.styl'
.header
  width 100% 
  &-wrap
    height 56px
    // overflow hidden
    background: $color-background-content
    border-radius: 6px;
    margin: 0 auto 
    display flex 
    width: 960px
    a 
      border-radius: 6px
  &__item:hover 
    background: $color-a-hover
  &__item
    position relative
    text-align: center
    padding: 20px 15px
    width 60px
    &:hover .dropdown  
      display block
    .dropdown 
      display none
      background: $color-background-content
      overflow hidden
      border-radius: 6px
      position absolute
      left 0
      top 58px
      li  
        position relative
        padding 20px 15px 
        white-space nowrap // 不继承父元素 根据内容自动撑开
        border-radius: 6px
        &:hover 
          background: $color-a-hover
