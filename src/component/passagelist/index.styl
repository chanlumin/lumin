@import '../../common/stylus/variable.styl'

.passage-content
  .post
    position: relative;
    // margin: 40px 0 0;
    padding: 40px 40px;
    border: 1px solid #eee;
    background: #fff;
    box-shadow: 0 2px 3px rgba(0,0,0,0.05);
    margin-bottom: 40px
    .post-header 
      ul 
        margin-bottom: 8px
        overflow hidden
        li 
          position: relative;
          float: left;
          text-transform: uppercase;
          font-size: 13px;
          letter-spacing: 0.05em;
          color: #aaa;
          &.cats 
            margin-left: 20px
          &.cats:before 
            position: absolute;
            top: 50%;
            left: -10px;
            width: 3px;
            height: 3px;
            border-radius: 50%;
            background: #ddd;
            content: "";
            -webkit-transform: translate(0, -50%);
            -moz-transform: translate(0, -50%);
            -ms-transform: translate(0, -50%);
            -o-transform: translate(0, -50%);
            transform: translate(0, -50%);
      h2  
        font-size: 30px;
        font-weight: 900;
        margin: 0 0 20px;
        // color: #333;
        a 
          color: #596667
    .post-content 
      font-size: $font-size-medium
      p  
        margin: 15px 0;
        line-height: 27px;
        color:#757575
        font-size: $font-size-medium-x
      a 
        color: #1abc9c;
        border-bottom: 1px solid #1abc9c;
    .post-footer 
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      border-top: 1px solid #eee;
      background: #fbfbfb;