@import '../../common/stylus/variable.styl'
.search 
  position relative
  box-shadow 0 3px 13px rgba(0,0,0,0.3)
  border-radius 3px 
  font-size $font-size-medium
  // border 1px solid rgba(0,0,0,0.3)
  // overflow hidden
  input 
    width 100%
    height 45px
    color #7e8c8d
    padding 10px 45px 10px 20px
    box-sizing border-box
  i 
    font-family iconfont
    font-size 24px
    display inline-block
    position absolute
    width 45px
    height 45px
    top 0
    right 0
    text-align center
    line-height 45px
    color $color-font
  .search__dropdown
    position absolute
    width 100% 
    top 47px 
    left 0
    .search__dropdown-item
      border-bottom-left-radius 3px
      border-bottom-right-radius 3px
      height 45px
      line-height 45px
      background #fff
      box-shadow 0 2px 2px rgba(0,0,0,0.3)
      padding-left 10px
      font-size 14px
      color $color-font
      cursor pointer
      &:hover 
        background $color-font
        color #fff
      

     